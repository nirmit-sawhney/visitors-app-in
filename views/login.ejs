<%-include('./partials/header') %>
<%-include('./partials/navbar') %>

<main class="container">
    <%-include('./partials/flash') %>
    <div id="check-in-form" class="col-lg-6 col-sm-12 mx-auto">
        <form action="/login" method="POST">
            <div class="form-group">
                <label for="username" class="form-label"></label>
                <input type="text" name="username" id="username" class="form-control" placeholder="Your Username" required>
            </div>
            <div class="form-group">
                <label for="password" class="form-label"></label>
                <input type="password" name="password" id="password" class="form-control" minlength="8" maxlength="16" placeholder="Your Password" required>
            </div>
            <button type="submit" class="btn btn-success btn-block">Log In</button>
            <p style="text-align:center;color:gray;" class="mt-2">Are you a new visitor ? <a href="/signup">Sign Up Now</a></p>
        </form>
    </div>
</main>

<%-include('./partials/footer') %>