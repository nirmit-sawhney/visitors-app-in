<%-include('./partials/header') %>
<%-include('./partials/navbar') %>

<main class="container">
    <%-include('./partials/flash') %>
    <div id="check-in-form" class="col-lg-6 col-sm-12 mx-auto">
        <form action="/signup" method="POST">
            <div class="form-group">
                <label for="username" class="form-label"></label>
                <input type="username" name="username" id="username" class="form-control" placeholder="Your Username" required>
            </div>
            <div class="form-group">
                <label for="email" class="form-label"></label>
                <input type="email" name="email" id="email" class="form-control" placeholder="Your Email" required>
            </div>
            <div class="form-group">
                <label for="password" class="form-label"></label>
                <input type="password" name="password" id="password" class="form-control" minlength="8" maxlength="16" placeholder="Your Password" required>
            </div>
            <button type="submit" class="btn btn-success btn-block">Check-In</button>
        </form>
    </div>
</main>

<%-include('./partials/footer') %>